<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="right">
    
    <View
		android:id="@+id/speechBubbleArrowRight"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignParentRight="true"
		android:layout_alignBottom="@+id/speechBubble"
		android:background="@drawable/drawble_dummy" />
    
    
    <RelativeLayout
        android:id="@+id/speechBubble"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@+id/speechBubbleArrowRight"
	    android:padding="10dp"
	    android:background="@drawable/user_speech_bubble">
	
		<TextView
			android:id="@+id/interactionEventSender"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/interactionEventContent"
			android:textStyle="bold"
			android:textColor="#D34F39"
			android:text="@string/dummy_text" />
	
		<TextView
			android:id="@+id/interactionEventContent" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/interactionEventSender"
			android:text="@string/dummy_text" />
		
		<TextView
			android:id="@+id/interactionEventTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/interactionEventContent"
			android:layout_alignLeft="@+id/interactionEventContent"
			android:textSize="12sp"
			android:textColor="#777"
			android:text="@string/dummy_text" />
	
	</RelativeLayout>
	 
</RelativeLayout> 
