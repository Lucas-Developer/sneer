<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="left">
         
    <View
		android:id="@+id/speechBubbleArrowLeft"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignTop="@+id/speechBubble"
		android:background="@drawable/drawble_dummy" />
    
	<RelativeLayout
        android:id="@+id/speechBubble"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"	    
	    android:padding="10dp"
	    android:layout_toRightOf="@+id/speechBubbleArrowLeft"
	    android:background="@drawable/contact_speech_bubble">
	
		<TextView
			android:id="@+id/interactionEventSender"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/interactionEventContent"
			android:textStyle="bold"
			android:textColor="#383"
			android:text="@string/dummy_text" />
	
		<TextView
			android:id="@+id/interactionEventContent" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/interactionEventSender"
			android:text="@string/dummy_text" />
		
		<TextView
			android:id="@+id/interactionEventTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/interactionEventContent"
			android:layout_alignLeft="@+id/interactionEventContent"
			android:textSize="12sp"
			android:textColor="#777"
			android:text="@string/dummy_text" />
	
	</RelativeLayout>
    
</RelativeLayout>
