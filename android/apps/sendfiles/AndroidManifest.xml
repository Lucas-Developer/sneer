<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sneer.android.sendfiles"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Dialog" >
        <activity
            android:name=".SendFilesActivity"
            android:excludeFromRecents="true" >
         
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            
            <meta-data android:name="sneer:interaction-type" android:value="MESSAGE/COMPOSE" />
            <meta-data android:name="sneer:tuple-type" android:value="file" />
            <meta-data android:name="sneer:menu-caption" android:value="Send File" />
            <meta-data android:name="sneer:menu-icon" android:resource="@drawable/ic_launcher" />
        </activity>
        <activity
            android:name=".ViewSendFilesActivity"
            android:excludeFromRecents="true" >            
    
            <intent-filter>
		        <action android:name="android.intent.action.VIEW" />
		    </intent-filter>
            
            <meta-data android:name="sneer:interaction-type" android:value="MESSAGE/VIEW" />
            <meta-data android:name="sneer:tuple-type" android:value="file" />
            <meta-data android:name="sneer:menu-icon" android:resource="@drawable/ic_launcher" />
        </activity>
    </application>

</manifest>
