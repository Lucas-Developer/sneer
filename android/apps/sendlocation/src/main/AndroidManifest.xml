<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fabiomanera.sendlocation"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Dialog">
        <activity
            android:name=".SendLocationActivity"
            android:excludeFromRecents="true"
            android:label="Searching for GPS...">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="sneer:plugin-type"
                android:value="MESSAGE/COMPOSE" />
            <meta-data
                android:name="sneer:tuple-type"
                android:value="location" />
            <meta-data
                android:name="sneer:menu-caption"
                android:value="Location" />
            <meta-data
                android:name="sneer:menu-icon"
                android:resource="@drawable/ic_launcher" />
        </activity>

        <meta-data
            android:name="sneer:app-type"
            android:value="plugin"/>
    </application>
</manifest>
