<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conversation_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDEE"
    android:padding="0dp"
    android:textIsSelectable="true"
    tools:context=".ConversationActivity" >

    <TextView
        android:id="@+id/waitingMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="normal|italic"
        android:text="@string/conversation_activity_waiting"
        android:layout_alignParentTop="true"/>

    <ListView
        android:id="@+id/messageList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/messageSender"
        android:divider="@null"
        android:padding="0dp"
        android:stackFromBottom="true"
        android:transcriptMode="normal" />

    <LinearLayout
        android:id="@+id/messageSender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:lines="4"
            android:minLines="1"
            android:scrollbars="vertical" >
        </EditText>

        <ImageButton
            android:id="@+id/actionButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/conversation_activity_action_button"
            android:src="@drawable/ic_action_send" >
        </ImageButton>
    </LinearLayout>

</RelativeLayout>
